[user]
  email = samuel.roeca@gmail.com
  name = Sam Roeca
[core]
  editor = nvim
  autocrlf = false
  safecrlf = false
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  decorations = false
  features = no decorations
  hunk-header-style = omit
  file-decoration-style = none
  navigate = true
[init]
  defaultBranch = main
[alias]
  hist = !nvim -c "GV" -c "silent!tabonly"
  s = !nvim -c "G" -c "only"
  root = rev-parse --show-toplevel
[merge]
  driver = true
  conflictstyle = zdiff3
[pull]
  rebase = true
[push]
  default = matching
  autoSetupRemote = true
[credential "https://github.com"]
  helper = !gh auth git-credential
[credential "https://gist.github.com"]
  helper = !gh auth git-credential
[pager]
  diff = delta
