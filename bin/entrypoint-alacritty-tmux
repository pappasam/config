#!/bin/bash

if ! command -v "$HOME/.asdf/installs/tmux/3.3a/bin/tmux" &> /dev/null; then
  /usr/bin/zsh
elif "$HOME/.asdf/installs/tmux/3.3a/bin/tmux" has-session -t Main 2>/dev/null; then
  /usr/bin/zsh
else
  "$HOME/.asdf/installs/tmux/3.3a/bin/tmux" -2 new-session -d -s Main
  "$HOME/.asdf/installs/tmux/3.3a/bin/tmux" -2 attach -t Main
fi
